{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@grpc-proto": [
        "libs/grpc-proto/src"
      ],
      "@grpc-proto/grpc-proto/*": [
        "libs/grpc-proto/src/*"
      ],
      "@account": [
        "apps/account/src"
      ],
      "@account/*": [
        "apps/account/src/*"
      ],
      "@client": [
        "apps/client/src"
      ],
      "@client/*": [
        "apps/client/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
